<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>FaceClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
  </head>

  <body>
    <header>
      <div class="header-menu">
      <% if logged_in? %>
        <%= link_to pictures_path ,{class:"home"} do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#2F72FF" class="menu-btn" viewBox="0 0 16 16">
            <path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5z"/>
          </svg>
        <% end %>
        <span class="home-pop">トップページ</span>
        <%= link_to user_path(current_user.id) ,{class:"user-info"} do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#2F72FF" class="menu-btn" viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
          </svg>
        <% end %>
        <span class="user-info-pop">ユーザー情報</span>
        <%= link_to session_path(current_user.id), {method: :delete, class:"logout-btn"} do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#2F72FF" class="menu-btn" viewBox="0 0 16 16">
            <path d="M1.5 15a.5.5 0 0 0 0 1h13a.5.5 0 0 0 0-1H13V2.5A1.5 1.5 0 0 0 11.5 1H11V.5a.5.5 0 0 0-.57-.495l-7 1A.5.5 0 0 0 3 1.5V15H1.5zM11 2h.5a.5.5 0 0 1 .5.5V15h-1V2zm-2.5 8c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1z"/>
          </svg>
        <% end %>
        <span class="logout-btn-pop">ログアウト</span>
      <% else %>
        <%= link_to new_user_path, {class:"signup-btn"} do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#2F72FF" class="menu-btn" viewBox="0 0 16 16">
            <path d="M8 2a5.53 5.53 0 0 0-3.594 1.342c-.766.66-1.321 1.52-1.464 2.383C1.266 6.095 0 7.555 0 9.318 0 11.366 1.708 13 3.781 13h8.906C14.502 13 16 11.57 16 9.773c0-1.636-1.242-2.969-2.834-3.194C12.923 3.999 10.69 2 8 2zm2.354 4.854l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7 8.793l2.646-2.647a.5.5 0 0 1 .708.708z"/>
          </svg>
        <% end %>
        <span class="signup-btn-pop">サインアップ</span>
        <%= link_to new_session_path,{class:"login-btn"} do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#2F72FF" class="menu-btn" viewBox="0 0 16 16">
            <path d="M12 1a1 1 0 0 1 1 1v13h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3V2a1 1 0 0 1 1-1h8zm-2 9a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
          </svg>
        <% end %>
        <span class="login-btn-pop">ログイン</span>
      <% end %>
      </div>
    </header>
    <div class="main-content">
      <%= flash_message(flash[:success], :success) if flash[:success] %>
      <%= flash_message(flash[:error], :danger) if flash[:error] %>
      <%= flash_message(flash[:alert], :worning) if flash[:alert] %>
      <%= flash_message(flash[:notice], :info) if flash[:notice] %>
    <%= yield %>
    </div>
  </body>
</html>
