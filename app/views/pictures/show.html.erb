<div  class="content-card">
  <div class="card-top">
    <% if @picture.user.user_image.url == nil %>
    <image src="https://placehold.jp/50x50.png" class="avatar">
    <% else %>
    <%= image_tag @picture.user.user_image.url ,class:"avatar"%>
    <% end %>
    <span class="user-name"><%= @picture.user.name %></span>
  </div>
  <div class="card-content">
    <%= @picture.content %>
  </div>
  <div class="picture-space">
    <% unless @picture.image.url == nil %>
      <%= image_tag @picture.image.url %>
    <% end %>
  </div>
  <div class="card-bottom">
    <% if @picture.user_id == current_user.id %>
    <%= link_to '編集', edit_picture_path(@picture.id), class:"btn btn-primary btn-sm" %>
    <%= link_to '削除', picture_path(@picture.id), {class:"btn btn-danger btn-sm", method: :delete} %>
  </div>
<% end %>
</div>
<!-- コメント一覧 -->

<div id="comments_area">
  <!-- 投稿されたコメント一覧をブログ詳細ページに表示するためのrender -->
  <%= render partial: 'comments/index', locals: { comments: @comments, picture: @picture } %>
</div>
<div>
  <!-- コメント入力欄をブログの詳細ページに表示するためのrender -->
  <%= render partial: 'comments/form', locals: { comment: @comment, picture: @picture } %>
  <%= link_to '編集', edit_picture_path(@picture) %> |
  <%= link_to '戻る', pictures_path %>
</div>
