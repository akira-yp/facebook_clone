<div class="content-card">
  <%= form_with(model: @picture, url: choose_new_or_edit ,local: true, class:"form-wrap") do |f| %>
  <div class="content-card-top">
    <% if current_user.user_image.url == nil %>
    <img src="https://placehold.jp/50x50.png" class="avatar">
    <% else %>
    <%= image_tag current_user.user_image.url ,class:"avatar"%>
    <% end %>
    <span class="user-name"><%= current_user.name %></span>
  </div>
  <div class="">
    <%= f.text_area :content, placeholder:"#{current_user.name}さん、その気持ちをシェアしよう" ,class:"content-form",wrap:"soft" %>
  </div>
  <div  class="form-bottom">
    <label class="file-btn">
      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#2F72FF" class="bi bi-card-image" viewBox="0 0 16 16">
      <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
      <path d="M1.5 2A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13zm13 1a.5.5 0 0 1 .5.5v6l-3.775-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12v.54A.505.505 0 0 1 1 12.5v-9a.5.5 0 0 1 .5-.5h13z"/>
      </svg>
      <%= f.file_field :image ,class:"choose-picture"%>
    </label>
    <span class="file-pop">画像を添付</span>
    <label class="submit-btn no-click">
      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#8baffc" class="bi bi-upload" viewBox="0 0 16 16">
      <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
      <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
    </svg>
      <%= f.submit %>
    </label>
    <span class="submit-pop">送信する</span>
  </div>
  <% end %>
</div>
